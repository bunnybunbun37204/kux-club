---
import { Button } from "@/components/ui/button";
const imageUrl = "/jersy.jpg"; // Replace with the actual image URL
---

<section class="relative w-full h-screen">
    <!-- Background Image -->
    <img src={imageUrl} alt="Promotional Image" class="object-cover w-full h-full absolute inset-0" />
  
    <!-- Overlay Content -->
    <div class="relative z-10 px-4 md:px-8 text-white h-full flex flex-col justify-center items-start md:items-center lg:items-start">
      <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-4 max-w-xs md:max-w-md lg:max-w-lg">
        HAVE IT WRAPPED AROUND YOUR FINGER
      </h2>
  
      <!-- Button with underline effect -->
      <a href="#" class="text-base md:text-lg lg:text-xl inline-flex items-center group">
        <Button className="bg-white text-black">SHOP HERE NA</Button>
      </a>
    </div>
  
    <!-- Optional: Overlay for color effect -->
    <div class="absolute inset-0 bg-pink-500 bg-opacity-20"></div>
</section>
  
